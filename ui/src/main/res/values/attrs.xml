<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--标题左侧文本-->
    <attr name="leftTitle" format="string" />
    <attr name="leftTitleColor" format="color" />
    <attr name="leftTitleSize" format="dimension" />
    <attr name="titleSize" format="dimension" />
    <attr name="rightTitle" format="string" />
    <attr name="rightTitleColor" format="color" />
    <attr name="rightTitleSize" format="dimension" />
    <attr name="titleMarginLeft" format="dimension" />
    <attr name="titleMarginRight" format="dimension" />

    <attr name="unit" format="string" />
    <attr name="unitTextColor" format="color" />
    <attr name="unitTextSize" format="dimension" />
    <attr name="isShowLine" format="boolean" />

    <declare-styleable name="FormFiled">
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:gravity" />
        <attr name="android:hint" />
        <attr name="android:digits" />
        <attr name="android:inputType" />
        <attr name="android:maxLength" />
        <attr name="decimalLength" format="integer" />
        <attr name="integerLength" format="integer" />
    </declare-styleable>

    <declare-styleable name="FormText">
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:gravity" />
        <attr name="android:hint" />
    </declare-styleable>

    <declare-styleable name="FormLayout">
        <!--标题左侧文本-->
        <attr name="leftTitle" />
        <attr name="leftTitleColor" />
        <attr name="leftTitleSize" />
        <!--标题-->
        <attr name="android:title" />
        <attr name="android:titleTextColor" />
        <attr name="titleSize" />
        <!--标题右侧文本-->
        <attr name="rightTitle" />
        <attr name="rightTitleColor" />
        <attr name="rightTitleSize" />
        <!--通用-->
        <attr name="titleMarginLeft" />
        <attr name="titleMarginRight" />
        <attr name="unit" />
        <attr name="unitTextColor" />
        <attr name="unitTextSize" />
        <!--左侧图标-->
        <attr name="titleDrawable" format="reference" />
        <attr name="titleDrawableSize" format="dimension" />
        <attr name="titleDrawableTint" format="color" />
        <attr name="titleDrawablePadding" format="dimension" />
        <!--中间图标-->
        <attr name="centerDrawable" format="reference" />
        <!--右侧图标-->
        <attr name="unitDrawable" format="reference" />
        <attr name="unitDrawableSize" format="dimension" />
        <attr name="unitDrawableTint" format="color" />
        <attr name="unitDrawablePadding" format="dimension" />
        <!--标题最小宽度-->
        <attr name="titleMinWidth" format="dimension" />
        <!--是否展示分割线-->
        <attr name="isShowLine" />
    </declare-styleable>

    <declare-styleable name="FormLabel">
        <!--标题左侧文本-->
        <attr name="leftTitle" />
        <attr name="leftTitleColor" />
        <attr name="leftTitleSize" />
        <!--标题-->
        <attr name="android:title" />
        <attr name="android:titleTextColor" />
        <attr name="titleSize" />
        <!--标题右侧文本-->
        <attr name="rightTitle" />
        <attr name="rightTitleColor" />
        <attr name="rightTitleSize" />
        <!--通用-->
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="titleMarginLeft" />
        <attr name="titleMarginRight" />
    </declare-styleable>

    <declare-styleable name="PasswordView">
        <attr name="inputMaxNum" format="integer" />
        <attr name="roundAngle" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="divingColor" format="color" />
        <attr name="circleColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="divingWidth" format="dimension" />
        <attr name="circleRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PasswordEditText">
        <attr name="isAlwaysShow" format="boolean" />
        <attr name="isShow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer" />
        <attr name="isSingle" format="boolean" />
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PicView">
        <attr name="selectStyle">
            <enum name="picture" value="1" />
            <enum name="camera" value="2" />
        </attr>
        <attr name="spanCount" format="integer" />
        <attr name="maxCount" format="integer" />
        <attr name="isPriView" format="boolean" />
        <!--自定义参数1，自定义-->
        <attr name="customParam1" format="integer" />
        <!--自定义参数2，自定义 -->
        <attr name="customParam2" format="integer" />
        <!--自定义参数2，自定义 -->
        <attr name="customParam3" format="integer" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <!--左侧图标-->
        <attr name="leftDrawable" format="reference" />
        <!--中部名称-->
        <attr name="android:title" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <!--右侧文字-->
        <attr name="rightTitle1" format="string"/>
        <attr name="rightTitleColor1"  format="color" />
        <attr name="rightTitleSize1"  format="dimension" />
        <attr name="rightTitle2" format="string"/>
        <attr name="rightTitleColor2"  format="color" />
        <attr name="rightTitleSize2"  format="dimension" />
        <!--右侧图标-->
        <attr name="rightDrawable1" format="reference" />
        <attr name="rightDrawable2" format="reference" />
        <!--是否自动注册返回事件，用于返回时无其他操作的情况-->
        <attr name="isBack" format="boolean" />
        <!--是否使用沉浸式，此处主要用于ViewPager+Fragment-->
        <attr name="isSupportImmersion" format="boolean" />
        <!--是否展示底部分隔线-->
        <attr name="isShowLine" />
    </declare-styleable>
</resources>